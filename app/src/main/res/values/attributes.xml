<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--attributes of customer view-->
    <declare-styleable name="CustomerAttributes">
        <!--The length of line-->
        <attr name="line_length" format="dimension"/>
        <!--The width of line-->
        <attr name="line_width" format="dimension"/>
        <!--The color of line-->
        <attr name="line_color" format="color"/>
        <!--The max distance that can be pull-->
        <attr name="max_distance" format="dimension"/>
        <!--The min distance that can be found-->
        <attr name="min_distance" format="dimension"/>
        <!--The source of button image-->
        <attr name="source_button" format="integer"/>
    </declare-styleable>


    <!--attributes of rounded image view-->
    <declare-styleable name="roundedImageView">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"></attr>
    </declare-styleable>


    <!--attributes of ripple image view-->
    <declare-styleable name="rippleImageView">
        //The width of ripple button
        <attr name="image_width" format="dimension"/>
        //The height of ripple button
        <attr name="image_height" format="dimension"/>
        //The color of ripple
        <attr name="ripple_color" format="color"/>
        //The speed of ripple
        <attr name="ripple_speed" format="integer"/>
        //The source of image
        <attr name="image" format="integer"/>
    </declare-styleable>


    <!--attributes of ripple layout-->
    <declare-styleable name="rippleLayout">
        <attr name="color" format="color"/>
        <attr name="speed" format="integer"/>
    </declare-styleable>

    <!---->
    <declare-styleable name="CircularProgressBar">
        <attr name="circle_color" format="color"/>
        <attr name="width" format="dimension"/>
    </declare-styleable>
    <!--slider-->
    <declare-styleable name="Slider">
        <!-- in progress view indicate max value of progress -->
        <attr name="max" format="integer" />
        <!-- in progress view indicate min value of progress -->
        <attr name="min" format="integer" />
        <!-- indicate if the slider must show number indicator -->
        <attr name="showNumberIndicator" format="boolean" />
    </declare-styleable>

    <!--swipe list-->
    <declare-styleable name="swipelistviewstyle">
        <attr name="right_width" format="dimension"></attr>
    </declare-styleable>

    <declare-styleable name="HeartCircle">
        <attr name="circle_color_inside" format="color"/>
        <attr name="circle_color_outside" format="color"/>
        <attr name="text_color" format="color"/>
        <attr name="text_size" format="dimension"/>
        <attr name="image_button" format="integer"/>
    </declare-styleable>
</resources>